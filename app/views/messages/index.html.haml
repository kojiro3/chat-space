.left-cont
  .left-cont__user
    %p.left-cont__user__name= current_user.name
    = link_to edit_user_registration_path do
      %i.fa.fa-cog.fa-fw
    = link_to new_group_path do
      %i.fa.fa-pencil-square-o.fa-fw
  .left-cont__group
    %ul.groups
      = render @groups

.right-cont
  .right-cont__group
    .right-cont__group__name
      = @group.name
    .right-cont__group__member
      %p MEMBER:
      %ul.member
        = render 'member', users: @users
    = link_to edit_group_path(@group) do
      %p.edit-button Edit
  .right-cont__chat
    %ul.chat
      = render @messages
  .right-cont__message
    = form_for [@group, @message], html: { class: 'js-form' } do |f|
      = f.text_field :body, class: 'right-cont__message__field', placeholder: 'type a message', value: ''
      .field
        = f.label :image
        = f.file_field :image, class: 'image', id: 'message_image', style: 'display:none;'
        %i.fa.fa-picture-o
      = f.hidden_field 'current_user_name', value: current_user.name, class: 'current_user_name'
      = f.submit 'Send', class: 'send-button'
